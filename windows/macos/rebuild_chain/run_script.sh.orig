#!/bin/bash
declare script=$1
/usr/bin/osascript <<EOF
global was_running
set was_running to (application "Terminal" is running)
tell application "System Events"
	tell me to tell application "Terminal"
		activate
		if was_running then
			set newWindow to (do script "")
		else
			set newWindow to window 1
		end if
		do script "${HOME}/bin/authenticate" in newWindow
		do script "cd "$(dirname "$(realpath "${BASH_SOURCE-$0}")")" in newWindow
                do script "${script}.sh" in newWindow
	end tell
end tell
EOF

